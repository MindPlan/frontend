{
    "compilerOptions": {
        "jsx": "react",
        "baseUrl": ".",
        "module": "esnext",
        "target": "ES2020",
        "moduleResolution": "node",
        "allowSyntheticDefaultImports": true,
        "paths": {
            "~assets/*": [
                "src/assets/*"
            ],
            "~shared/*": [
                "src/shared/*"
            ],
            "~store/*": [
                "src/store/*"
            ],
            "~/*": [
                "src/*"
            ],
            "~modules/*": [
                "src/modules/*"
            ],
            "~auth/*": [
                "src/modules/auth/*"
            ],
            "~services/*": [
                "src/shared/services/*"
            ],
            "~utils/*": [
                "src/shared/utils/*"
            ]
        }
    }
}